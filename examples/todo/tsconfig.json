{
    "version": "1.6.2",
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es3",
        "module": "amd",
        "outDir": "dist/web",
        "sourceMap": false,
        "removeComments": true,
        "listFiles": true,
        "declaration": true
    },
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "newLineCharacter": "\r\n",
        "convertTabsToSpaces": true,
        "insertSpaceAfterCommaDelimiter": true,
        "insertSpaceAfterSemicolonInForStatements": true,
        "insertSpaceBeforeAndAfterBinaryOperators": true,
        "insertSpaceAfterKeywordsInControlFlowStatements": true,
        "insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
        "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
        "placeOpenBraceOnNewLineForFunctions": false,
        "placeOpenBraceOnNewLineForControlBlocks": false
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*",
        "!./dist/**/*",
        "./node_modules/bobril/**/*.d.ts",
        "./node_modules/bobflux/**/*.d.ts"
    ],
    "files": [
        "./src/actions.ts",
        "./src/app.ts",
        "./src/bootstrap.ts",
        "./src/bootstrap/button.ts",
        "./src/bootstrap/checkbox.ts",
        "./src/bootstrap/container.ts",
        "./src/bootstrap/formGroup.ts",
        "./src/bootstrap/inlineForm.ts",
        "./src/bootstrap/input.ts",
        "./src/cursors.ts",
        "./src/footer.ts",
        "./src/states.ts",
        "./src/todoItemsHeader.ts",
        "./src/todoItemsList.ts",
        "./node_modules/bobril/index.d.ts",
        "./node_modules/bobflux/dist/src/actionFactory.d.ts",
        "./node_modules/bobflux/dist/src/component.d.ts",
        "./node_modules/bobflux/dist/src/cursor.d.ts",
        "./node_modules/bobflux/dist/src/helpers.d.ts",
        "./node_modules/bobflux/dist/src/index.d.ts",
        "./node_modules/bobflux/dist/src/state.d.ts",
        "./node_modules/bobflux/dist/src/store.d.ts"
    ]
}
